import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Hyperlink;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.scene.text.Font;
import javafx.scene.control.Label;
import javafx.stage.Stage;

public class ShopFXInicio extends Application {

    @Override
    public void start(Stage stage) {

        // --- LAYOUT PRINCIPAL ---
        VBox root = new VBox(40);
        root.setAlignment(Pos.TOP_CENTER);
        root.setPadding(new Insets(60, 20, 20, 20));
        root.setStyle("-fx-background-color: #FAF6EF;");

        // --- LOGO ---
        ImageView logo = new ImageView(new Image("file:logo.png"));
        logo.setFitWidth(150);
        logo.setFitHeight(150);

        // --- TEXTO SHOPFX ---
        Label titulo = new Label("ShopFX");
        titulo.setFont(Font.font("Arial", 50));
        titulo.setTextFill(Color.web("#0A1A33"));

        // --- BOTÓN "INICIAR SESIÓN" ---
        Button btnLogin = new Button("iniciar sesion");
        btnLogin.setPrefWidth(260);
        btnLogin.setPrefHeight(55);
        btnLogin.setStyle(
            "-fx-background-color: #FFF95B; " +
            "-fx-background-radius: 40; " +
            "-fx-font-size: 24;"
        );

        // --- TEXTO INFERIOR ---
        Label pregunta = new Label("No tienes una cuenta?");
        pregunta.setFont(Font.font(16));
        pregunta.setTextFill(Color.web("#0A1A33"));

        Hyperlink registrar = new Hyperlink("registrate");
        registrar.setFont(Font.font(16));
        registrar.setTextFill(Color.RED);
        registrar.setBorder(null);

        VBox abajo = new VBox(5, pregunta, registrar);
        abajo.setAlignment(Pos.CENTER);

        // --- ESPACIADO CENTRAL ---
        VBox separador = new VBox();
        separador.setPrefHeight(250);

        // --- ARMADO FINAL ---
        root.getChildren().addAll(
                logo,
                titulo,
                separador,
                btnLogin,
                abajo
        );

        Scene scene = new Scene(root, 400, 700);
        stage.setScene(scene);
        stage.setTitle("ShopFX");
        stage.show();
    }

    public static void main(String[] args) {
        launch();
    }
}
